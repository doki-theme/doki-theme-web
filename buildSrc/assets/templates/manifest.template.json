{
  "name": "Doki Theme for Chrome",
  "short_name": "Doki Theme",
  "version": "17.0.0",
  "description": "A collection of themes based on girls from various anime, manga, and visual novels series.",
  "manifest_version": 3,
  "icons": {
    "48": "icons/doki-theme-logo@48.png",
    "96": "icons/doki-theme-logo@96.png"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "permissions": [
    "search",
    "tabs",
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_idle",
      "js": [
        "js/scrollbarStyleInjection.js",
        "js/selectionStyleInjection.js"
      ]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "browser_style": true,
    "default_icon": {
      "16": "icons/doki-theme-logo@16.png",
      "32": "icons/doki-theme-logo@32.png",
      "64": "icons/doki-theme-logo@64.png"
    },
    "default_popup": "popup.html",
    "default_title": "Doki Theme"
  },
  "chrome_url_overrides": {
    "newtab": "tab.html"
  },
  "theme": {
    "images": {
      "theme_ntp_background": "",
      "theme_ntp_background_incognito": "",
      "theme_toolbar": "images/tab_highlight.png",
      "theme_tab_background": "images/tab_inactive.png"
    },
    "colors": {
      "bookmark_text": "&foregroundColor&",
      "button_background": "&buttonColor&",
      "frame": "&baseBackground&",
      "frame_inactive": "&textEditorBackground&",
      "frame_incognito": "&textEditorBackground&",
      "frame_incognito_inactive": "&baseBackground&",
      "ntp_background": "&baseBackground&",
      "ntp_header": "&textEditorBackground&",
      "omnibox_background": "&secondaryBackground&",
      "omnibox_text": "&accentColor&",
      "theme_toolbar": "&highlightColor&",
      "ntp_text": "&foregroundColor&",
      "tab_background_text": "&foregroundColor&",
      "tab_background_text_inactive": "&lineNumberColor&",
      "tab_text": "&foregroundColor&",
      "toolbar": "&textEditorBackground&"
    },
    "tints": {
      "buttons": "&accentColor&",
      "frame": "&accentColor&"
    },
    "properties": {
      "ntp_background_alignment": "center",
      "ntp_logo_alternate": 0
    }
  }
}